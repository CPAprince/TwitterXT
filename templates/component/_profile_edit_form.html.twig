<form id="profile-edit-form" class="border p-3 rounded bg-light">
    <div class="mb-3">
        <label for="profile-name" class="form-label">Name</label>
        <input
            type="text"
            class="form-control"
            id="profile-name"
            name="name"
            minlength="3"
            maxlength="50"
            data-char-counter
            required
        >
        <div class="d-flex justify-content-end mt-1">
            {% include 'component/_char_counter.html.twig' with { maxlength: 50 } only %}
        </div>
    </div>

    <div class="mb-3">
        <label for="profile-bio" class="form-label">Bio</label>
        <textarea
            class="form-control"
            id="profile-bio"
            name="bio"
            rows="3"
            maxlength="300"
            data-char-counter
        ></textarea>
        <div class="d-flex justify-content-end mt-1">
            {% include 'component/_char_counter.html.twig' with { maxlength: 300 } only %}
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" id="cancel-profile-edit">Cancel</button>
    </div>

    <div id="profile-edit-alerts" class="mt-2"></div>
</form>
