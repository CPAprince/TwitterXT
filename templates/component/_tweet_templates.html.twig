<template id="tpl-tweets-empty">
    <div class="p-3">
        <div class="alert alert-secondary mb-0">No tweets yet.</div>
    </div>
</template>

<template id="tpl-tweet-item">
    <div class="tweet p-3 border-bottom" data-tweet-id="">
        <div class="d-flex align-items-center mb-1">
            <a class="fw-bold me-2 text-decoration-none text-reset" data-tweet-author-link href="#">
                <span data-tweet-author-name></span>
            </a>
            <span class="text-muted" data-tweet-created-at></span>
        </div>

        <div class="tweet-content-display">
            <p class="mb-2" data-tweet-content></p>
        </div>

        <div class="tweet-edit-form" style="display: none;">
            <div class="tweet-form-container" data-form-mode="edit" data-tweet-id="">
                <form class="tweet-form">
                    <textarea
                        class="form-control mb-2"
                        name="content"
                        rows="3"
                        maxlength="280"
                        data-char-counter
                        placeholder="What's happening?"
                        required
                    ></textarea>

                    <div class="d-flex justify-content-end mb-2">
                        {% include 'component/_char_counter.html.twig' with { maxlength: 280 } only %}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-sm">Save</button>
                        <button type="button" class="btn btn-secondary btn-sm tweet-form-cancel">Cancel</button>
                    </div>

                    <div class="tweet-form-alerts mt-2"></div>
                </form>
            </div>
        </div>

        <div class="tweet-actions d-flex justify-content-between w-75">
            <div class="d-flex gap-3 align-items-center">
                <button class="btn btn-link btn-sm p-0 tweet-like-btn"
                        data-tweet-id=""
                        data-liked="false"
                        type="button"
                        style="text-decoration: none; color: inherit;">
                    <i class="far fa-thumbs-up tweet-like-icon"></i>
                    <span class="tweet-like-count">0</span>
                </button>

                <a data-tweet-external-link href="#">
                    <i class="fa fa-external-link" aria-hidden="true"></i>
                </a>

                <button class="btn btn-link btn-sm p-0 tweet-edit-btn"
                        data-tweet-id=""
                        data-author-id=""
                        style="display: none;">
                    <i class="fas fa-edit"></i>
                </button>
            </div>
        </div>
    </div>
</template>
